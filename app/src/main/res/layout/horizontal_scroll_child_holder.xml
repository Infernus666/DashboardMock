<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/horizontal_scroll_child_width"
    android:layout_height="@dimen/horizontal_scroll_child_height"
    android:background="@android:color/white"
    android:elevation="5dp"
    >
    <ImageView
        android:id="@+id/horizontal_scroll_child_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="44dp"
        android:scaleType="centerCrop"
        android:background="@color/lightGrey"
        />

    <TextView
        android:id="@+id/horizontal_scroll_child_discount_label"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="1dp"
        android:textSize="12dp"
        android:text="50% off"
        android:gravity="center"
        android:background="@android:color/holo_orange_dark"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        >
        <TextView
            android:id="@+id/horizontal_scroll_child_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_weight="1"
            android:text="Nexus 5 16gb"
            android:textSize="14dp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/horizontal_scroll_child_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_weight="1"
                android:text="Rs xxxx"
                android:textSize="11dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/horizontal_scroll_child_original_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_weight="1"
                android:text="Rs xxxx"
                android:textSize="11dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center_vertical"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>